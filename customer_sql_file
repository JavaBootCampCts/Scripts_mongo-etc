use leancrm;
select CONCAT(if(Customer.custNum is null ,'',Customer.custNum),',',if(Customer.bfId is null ,'',Customer.bfId),',',if(Customer.portalId is null ,'',Customer.portalId),',',if(Customer.domain is null ,'',Customer.domain),',',if(Customer.alternativeContactNumber is null ,'',Customer.alternativeContactNumber),',',if(Customer.title is null ,'',Customer.title),',',if(Customer.forename is null ,'',Customer.forename),',',if(Customer.initials is null ,'',Customer.initials),',',if(Customer.lastname is null ,'',Customer.lastname),',',if(Customer.dateOfBirth is null ,'',Customer.dateOfBirth),',',if(Customer.email is null ,'',Customer.email),',',if(Customer.o2MarketingRequired is null ,'',Customer.o2MarketingRequired),',',if(Customer.otherMarketingRequired is null ,'',Customer.otherMarketingRequired),',',if(Customer.creationDate is null ,'',Customer.creationDate))from Customer where bfId =@param;
